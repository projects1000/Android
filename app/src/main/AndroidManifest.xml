<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.myapplication01">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.myapplication01">

        <!-- Make HomeActivity the launcher activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".IdentifyGamesActivity" />
        <activity android:name=".SmallLetterA2ZGameActivity" />
        <activity android:name=".IdentifyObjectsActivity" />
        <activity android:name=".IdentifyBirdsActivity" />
        <activity android:name=".IdentifyFlowersActivity" />
        <activity android:name=".IdentifyVegetablesActivity" />
        <activity android:name=".IdentifyVehiclesActivity" />
        <activity android:name=".IdentifyNonlivingObjectsActivity" />
        <activity android:name=".IdentifyMusicalInstrumentsActivity" />
        <activity android:name=".IdentifyCommunityActivity" />
        <activity android:name=".IdentifyList" />
        <activity android:name=".PuzzleActivity" />
        <activity android:name=".BehavioralActivity" />
        <activity android:name=".QuizActivity" />

        <!-- A2ZGameActivity declared, but not as the launcher -->
        <activity
            android:name=".A2ZGameActivity"
            android:exported="false" />
        <activity android:name=".AZListingActivity" />
        <activity
            android:name=".OneTo30Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>
        <activity
            android:name=".ErrorActivity"
            android:exported="false" />

    </application>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
</manifest>
