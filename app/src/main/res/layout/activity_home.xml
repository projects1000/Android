<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/insidegame"
    android:padding="16dp">

    <!-- ImageView for ambasodor image -->
    <ImageView
        android:id="@+id/ambasodorImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ambasodor"
        android:scaleType="centerInside"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4" /> <!-- Horizontal bias shifted to the left -->

    <!-- Welcome Text ("Welcome to") -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:background="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Mind Game Text ("Mind Game") -->
    <TextView
        android:id="@+id/mindGameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MindGame"
        android:textSize="44sp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:shadowRadius="4"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Go Inside Button positioned at the bottom -->
    <Button
        android:id="@+id/goInsideButton"
        android:layout_width="237dp"
        android:layout_height="76dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:padding="10dp"
        android:text="START"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
