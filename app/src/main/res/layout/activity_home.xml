<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ambassador"
    android:padding="16dp">

    <!-- Welcome Text ("Welcome to") -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textSize="36sp"
        android:textColor="#8B4513"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Mind Game Text ("Mind Game") -->
    <TextView
        android:id="@+id/mindGameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mind Game"
        android:textSize="44sp"
        android:textColor="#8B4513"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <!-- Button to Start Learn Capital A to Z -->
    <Button
        android:id="@+id/btnLearnCapital"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Learn Capital A to Z"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#8B4513"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLearnSmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Button to Start Learn Small a to z -->
    <!-- Button to Start Learn Small a to z -->
    <Button
        android:id="@+id/btnLearnSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Learn Small a to z"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#8B4513"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>  <!-- Add this line -->

</androidx.constraintlayout.widget.ConstraintLayout>
