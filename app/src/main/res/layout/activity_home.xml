<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    android:padding="16dp">

    <!-- Centered Text and Button Stack -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textSize="36sp"
            android:textColor="#FFBB33"
            android:shadowColor="#444444"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/mindGameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EduCare"
            android:textSize="44sp"
            android:textColor="#FF5722"
            android:shadowColor="#444444"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/goInsideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_curved"
            android:text="START"
            android:letterSpacing="0.1"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Bird Images for Animation -->
    <ImageView
        android:id="@+id/bird1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bird1"
        android:visibility="invisible"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/bird2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bird1"
        android:visibility="invisible"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
