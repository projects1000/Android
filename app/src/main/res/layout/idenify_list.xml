<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/insidegame"
        android:padding="16dp"
        android:id="@+id/listLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Fruits Row -->
    <TextView
        android:id="@+id/headerLearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IDENTIFY"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnAnimals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animals"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLearn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnBirds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birds"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAnimals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnFlowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruits and Flowers"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBirds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnVegetables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetables"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFlowers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnVehicles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicles"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnVegetables"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnNonLivingObjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non-Living Objects"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnVehicles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnNonLivingObjects"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnMusicalInstruments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Musical Instruments"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnGames"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Community"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_curved"
        android:letterSpacing="0.2"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textAllCaps="false"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMusicalInstruments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
